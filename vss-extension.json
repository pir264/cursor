{
  "manifestVersion": 1,
  "id": "pipeline-stages-extension",
  "version": "1.0.0",
  "name": "Pipeline Stages Viewer",
  "description": "View detailed stage information for YAML pipelines",
  "publisher": "PeterCR",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "scopes": [
    "vso.build",
    "vso.project"
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "contributions": [
    {
      "id": "pipeline-stages-hub",
      "type": "ms.vss-web.hub",
      "targets": [
        "ms.vss-build-web.pipelines-hub-group"
      ],
      "properties": {
        "name": "Pipeline Stages",
        "uri": "PipelineStagesHub/PipelineStagesHub.html"
      }
    }
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    }
  ]
}
